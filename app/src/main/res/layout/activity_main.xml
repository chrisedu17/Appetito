<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.christopher.appetito.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="¿Qué deseas preparar?"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desayuno"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10pt"
        android:layout_marginTop="40px"
        android:textStyle="italic"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ir_desayuno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="1dp"
        android:onClick="ingredientes_de"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Almuerzo"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10pt"
        android:layout_marginTop="5px"
        android:textStyle="italic"
        android:layout_below="@+id/ir_desayuno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ir_almuerzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ir_desayuno"
        android:layout_alignLeft="@+id/ir_desayuno"
        android:layout_alignRight="@+id/ir_desayuno"
        android:layout_alignStart="@+id/ir_desayuno"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="1dp"
        android:onClick="ingredientes_al"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Once"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10pt"
        android:layout_marginTop="5px"
        android:textStyle="italic"
        android:layout_below="@+id/ir_almuerzo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ir_once"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ir_almuerzo"
        android:layout_alignLeft="@+id/ir_almuerzo"
        android:layout_alignRight="@+id/ir_almuerzo"
        android:layout_alignStart="@+id/ir_almuerzo"
        android:layout_below="@+id/textView3"
        android:onClick="ingredientes_on"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10pt"
        android:textStyle="italic"
        android:layout_below="@+id/ir_once"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/ir_cena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ir_once"
        android:layout_alignLeft="@+id/ir_once"
        android:layout_alignRight="@+id/ir_once"
        android:layout_alignStart="@+id/ir_once"
        android:layout_below="@+id/textView4"
        android:onClick="ingredientes_ce"
        app:srcCompat="@mipmap/ic_launcher" />


</RelativeLayout>
